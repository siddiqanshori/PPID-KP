<div class="welcome-area" id="welcome">
    <div class="header-text">
        <div class="container">
            <div class="row">
                <div class="left-text col-lg-6 col-md-6 col-sm-12 col-xs-12" data-scroll-reveal="enter left move 30px over 0.6s after 0.4s">
                    <h1>Profil Badan Publik</h1>
                    <!-- <p>Kegiatan Kota Cimahi Saat Ini</p> -->
                    <a href="#about" class="main-button-slider">Find Out More</a>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" data-scroll-reveal="enter right move 30px over 0.6s after 0.4s">
                    <%= image_tag 'slider-icon.png', alt: '#', class: 'rounded img-fluid d-block mx-auto' %>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="section" id="about">
  <div class="container">
    <div id="pengajuaninformasis">
      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Judul Dokumen</th>
            <th scope="col">Instansi</th>
            <th scope="col">Jenis Dokumen</th>
            <th scope="col">Jenis Informasi</th>
            <th scope="col">Jenis PPID</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% @dokumen.each_with_index do |dokumen, index| %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= dokumen.judul_dokumen %></td>
              <td><%= dokumen.instansi %></td>
              <td><%= dokumen.jenis_dokumen %></td>
              <td><%= dokumen.jenis_informasi %></td>
              <td><%= dokumen.jenis_ppid %></td>
              <td>
                <% if dokumen.attachment.attached? %>
                <%= link_to increment_access_dokuman_path(dokumen),target: "_blank", class: "" do %>
                  <i class="fa-solid fa-eye"></i>
                <% end %>
                <% else %>
                  No attachment
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @dokumen %>
    </div>
  </div>
</section>
