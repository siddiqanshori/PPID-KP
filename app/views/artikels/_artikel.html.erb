<style>

/* Header/Blog Title */
.header {
  padding: 30px;
  font-size: 40px;
  text-align: center;
  background: white;
}

/* Create two unequal columns that floats next to each other */
/* Left column */
.leftcolumn {
  float: left;
  width: 75%;
}

/* Right column */
.rightcolumn {
  float: left;
  width: 25%;
  padding-left: 20px;
}

/* Fake image */
.fakeimg {
  background-color: #aaa;
  width: 100%;
  padding: 20px;
}

/* Add a card effect for articles */
.card {
   background-color: white;
   padding: 20px;
   margin-top: 20px;
}

/* Clear floats after the columns */
.row:after {
  content: "";
  display: table;
  clear: both;
}

/* Footer */
.footer {
  padding: 20px;
  text-align: center;
  background: #ddd;
  margin-top: 20px;
}

/* Responsive layout - when the screen is less than 800px wide, make the two columns stack on top of each other instead of next to each other */
@media screen and (max-width: 800px) {
  .leftcolumn, .rightcolumn {
    width: 100%;
    padding: 0;
  }
}
</style>

<div class="container">
  <div class="row">
    <div class="leftcolumn">
      <div class="card">
        <%= image_tag url_for(artikel.banner), class: 'projcard-img' %>
        <h2><%= artikel.judul %></h2>
        <p><small><%= artikel.created_at %></small></p>
        <p><%= artikel.konten %></p>
      </div>
    </div>
    <div class="rightcolumn">
      <hr>
      <% Artikel.limit(5).each do |artikel| %>
        <p>
          <a href="<%= artikel_path(artikel) %>" ><%= artikel.judul %></a>
        </p>
      <% end %>
      </div>
    </div>
  </div>
</div>
